@article{Koster1990-az,
	abstract = {Abstract A model representing a soil-atmosphere column in a GCM
               is developed for off-line testing of GCM soil hydrology
               parameterizations. Repeating three representative GCM
               sensitivity experiments with this one-dimensional model
